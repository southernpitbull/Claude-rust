# AIrchitect CLI Configuration Example
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files with real credentials

# =============================================================================
# AI Provider API Keys
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro

# Qwen Configuration
QWEN_API_KEY=your-qwen-api-key-here
QWEN_MODEL=qwen-turbo

# Cloudflare Workers AI Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# =============================================================================
# Local AI Providers (Optional)
# =============================================================================

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LM Studio Configuration
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODEL=your-local-model

# vLLM Configuration
VLLM_BASE_URL=http://localhost:8000
VLLM_MODEL=your-vllm-model

# =============================================================================
# Database Configuration
# =============================================================================

# Database Connection String (PostgreSQL, SQLite, etc.)
DATABASE_URL=sqlite:./data/airchitect.db

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Email/SMTP Configuration (for notifications)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@airchitect.ai

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Session secret
SESSION_SECRET=your-session-secret-key

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Port
PORT=3000

# Log Level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Enable HTTPS in production
FORCE_HTTPS=false

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable telemetry
ENABLE_TELEMETRY=false

# Enable auto-updates
ENABLE_AUTO_UPDATES=false

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum concurrent AI requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Memory limit for vector store (MB)
VECTOR_STORE_MEMORY_LIMIT=512

# =============================================================================
# Storage Configuration
# =============================================================================

# Data directory
DATA_DIR=./data

# Cache directory
CACHE_DIR=./.cache

# Temporary files directory
TEMP_DIR=./tmp

# Maximum storage size (MB)
MAX_STORAGE_SIZE=1024

# =============================================================================
# Integration Configuration
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_ORG=your-organization

# Linear Integration
LINEAR_API_KEY=your-linear-api-key
LINEAR_TEAM_ID=your-team-id

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable profiling
ENABLE_PROFILING=false

# Mock API calls (for testing)
MOCK_API_CALLS=false
